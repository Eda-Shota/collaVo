<table class="table border border-secondary">
  <tbody>
    <% notifications.each do |notification| %>
      <tr>
        <td>
          <%= l notification.created_at %><br>
          <%= link_to notification_path(notification.id) do %>  
            <h4><%= notification.title.truncate(10) %></h4>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
