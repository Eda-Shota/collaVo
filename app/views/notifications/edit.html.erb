<h1>お知らせを修正する</h1>
<div class="row">
  <div class="col-md-10">
    <%= form_with model:@notification do |f| %>
      <%= render 'layouts/errors', obj: @notification %>
      <div class="form-group">
        <%= f.label :"お知らせのタイトル" %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :"お知らせの内容" %>
        <%= f.text_area :introduction, class: "form-control", rows: "20" %>
      </div>
      <div class="form-group">
        <%= f.submit "お知らせを編集する", :name => 'post', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>