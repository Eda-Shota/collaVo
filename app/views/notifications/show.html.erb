<div class="col-md-9 border border-secondary rounded-lg pb-5">
  <h1><%= @notification.title %></h1>
    <% if admin_signed_in? %>
      <%= link_to "おしらせを編集する", edit_notification_path(@notification), class: "btn btn-success" %>
      <%= link_to "おしらせを削除する", notification_path(@notification.id), method: :delete , data: {confirm: "本当におしらせを削除しますか？"}, class: "btn btn-danger"%>
    <% end %>

  <div class="pt-2">
    <%= safe_join(@notification.introduction.split("\n"),tag(:br)) %>
  </div>
</div>

  