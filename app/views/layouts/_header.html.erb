<header class="bg-dark">
  <nav class="navbar navbar-expand-lg navbar-dark pb-0">
    <div class="navbar-brand">
        <%= link_to root_path, class: 'navbar-brand nav-link' do %>
          <%= image_tag "logo.png", size: '200x50'%>
        <% end %>
    </div>

    <div class="container navbar-collapse">
      <ul class="navbar-nav ml-auto ol-5">
        <li class="nav-item">
          <%= link_to about_path,class: "nav-link text-light px-2 mx-2 border border-dark rounded-lg bg-dark" do %>
            <h1>About</h1>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to users_path,class: "nav-link text-light px-2 mx-2 border border-dark rounded-lg bg-dark" do %>
            <h1>ユーザー一覧</h1> 
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to projects_path,class: "nav-link text-light px-2 mx-2 border border-dark rounded-lg bg-dark" do %>
            <h1>募集一覧</h1> 
          <% end %>
        </li>
      </ul>
    </div>
  </nav>
  <div class="d-flex flex-row-reverse mr-md-5 pb-1 my-3">
    <%= form_with url: search_path, method: :get do |f| %>
      <%= f.select :range, options_for_select([['企画タイトル'],['企画タグ']]),selected: 1 %>
      <%= f.text_field :word , placeholder:"search"%>
    <% end %>
  </div>
</header>