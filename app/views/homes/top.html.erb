<div class="row">
  <div class="col-md-9">
    <div class="swiper">
      <div class="swiper-wrapper">
        <% @sample_prohects.each do |project| %>
          <div data-turbolinks="false", class="swiper-slide ">
            <%= link_to project_path(project.id) do %>
              <%= image_tag project.get_project_image, width: '100%', height: '100%' %>
            <% end %>
          </div>
        <% end %>  
      </div>
      <div class="swiper-pagination"></div>
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
  <div class="col-md-3 border border-secondary rounded-lg text-center">
    <h4>運営からのおしらせ</h4>
      <%= render 'notifications/index', notifications: @notifications %>
    <div>
      <%= link_to "お知らせ一覧へ", notifications_path %>  
    </div>
  </div>
</div>
<div class="row">
  <h3>新着の募集</h3>
</div>
<div class="row">
  <%= render 'projects/index', projects: @projects%>
</div>
<script>
  const swiper = new Swiper('.swiper', {
  //swiperのオプション設定
  loop: true, //最後までスライドしたら最初の画像に戻る
  autoplay: true, //自動再生
  //ページネーション表示の設定
  pagination: { 
    el: '.swiper-pagination', //ページネーションの要素
  },
  //ナビゲーションボタン（矢印）表示の設定
  navigation: { 
    nextEl: '.swiper-button-next', //「次へボタン」要素の指定
    prevEl: '.swiper-button-prev', //「前へボタン」要素の指定
  }
});
</script>