<div class="row">
  <div class="col-md-9">
    <div class="swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <%= image_tag "top_kari.jpg", width: '100%', height: '100%' %>
        </div>
        <div class="swiper-slide">
          <%= image_tag "top_kari.jpg", width: '100%', height: '100%' %>
        </div>
        <div class="swiper-slide">
          <%= image_tag "top_kari.jpg", width: '100%', height: '100%' %>
        </div>
      </div>
      <!-- ページネーションの要素 -->
      <div class="swiper-pagination"></div>
      <!-- ナビゲーションボタン （前、次） -->
      <div class="swiper-button-prev"></div>
      <div class="swiper-button-next"></div>
    </div>
  </div>
  <div class="col-md-3 border border-secondary rounded-lg text-center">
    <h4>運営からのお知らせ</h4>
    <p>お知らせの内容</p>
  </div>
</div>
<div class="row">
  <h3>新着の募集</h3>
</div>
<div class="row">
  <%= render 'projects/index', projects: @projects%>
</div>
<script>
  const swiper = new Swiper('.swiper', {
  //オプションの設定
  loop: true, //最後までスライドしたら最初の画像に戻る
  autoplay: true,
  //ページネーション表示の設定
  pagination: { 
    el: '.swiper-pagination', //ページネーションの要素
  },
 
  //ナビゲーションボタン（矢印）表示の設定
  navigation: { 
    nextEl: '.swiper-button-next', //「次へボタン」要素の指定
    prevEl: '.swiper-button-prev', //「前へボタン」要素の指定
  }
});
</script>