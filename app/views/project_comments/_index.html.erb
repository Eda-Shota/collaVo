<table>
  <tbody>
      <% project_comments.each do |project_comment| %>
      <tr>
        <td>
          <%= link_to user_path(project_comment.user) do %>
            <%= image_tag project_comment.user.get_user_image, size: "50x50" %><br>
            <%= project_comment.user.name %>
          <% end %>
        </td>
        <td>
          <p><%= project_comment.comment %></p>
        </td>
        <td>
          <% if project_comment.user == current_user %>
            <%= link_to "削除", project_comment_path(project_comment), method: :delete, class: "btn btn-danger pull-right",remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>