<h1>お問い合わせフォーム</h1>
<%= form_with(model: @contact, local: true) do |f| %>
  <%= render 'layouts/errors', obj: @contact %>
  <div class="form-group">
    <%= f.label "お名前" %>
    <%= f.text_field :name, placeholder: "お名前", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "お問い合わせ内容" %>
    <%= f.text_area :content, placeholder: "お問合わせ内容を入力してください", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信", class: 'btn btn-success' %>
  </div>
<% end %>

